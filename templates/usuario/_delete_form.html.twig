<form method="post" action="{{ path('app_usuario_delete', {'idUsuario': usuario.idUsuario}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ usuario.idUsuario) }}">

    {% if is_granted("ROLE_ADMIN")%}
                               <button class="btn">Delete</button>
                                {% endif %}
    
</form>
